{
  "manifest_version": 3,
  "name": "Focus Launcher",
  "version": "1.0.0",
  "description": "研究用PCでの集中作業をサポートするブラウザ拡張機能",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
  {
    "resources": [
      "popup.html", 
      "popup.js", 
      "popup.css", 
      "config.js",
      "consent-screen.html",
      "consent-screen.css", 
      "consent-screen.js"
    ],
    "matches": ["<all_urls>"]
  }],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Launcher"
  },
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
} 