{
  "manifest_version": 3,
  "name": "Focus Launcher",
  "version": "1.2.0",
  "description": "研究用PCでの集中作業をサポートするブラウザ拡張機能",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "idle"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
  {
    "resources": [
      "views/popup.html",
      "views/popup.js",
      "views/popup.css",
      "config.js",
      "views/consent-screen.html",
      "views/consent-screen.css",
      "views/consent-screen.js",
      "views/reflection.html",
      "views/reflection.css",
      "views/reflection.js",
      "views/newtab.html",
      "views/newtab.css",
      "views/newtab.js",
      "modules/**/*.js"
    ],
    "matches": ["<all_urls>"]
  }],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "views/popup.html",
    "default_title": "Focus Launcher"
  },
  "chrome_url_overrides": {
    "newtab": "views/newtab.html"
  }
}